<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:padding="10dp">

    <gradient
        android:angle="90"
        android:centerX="45%"
        android:centerColor="#00600F"
        android:startColor="#00A81A"
        android:endColor="#00A81A"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <corners android:radius="500dp"/>
    <stroke
        android:width="2dp"
        android:color="#00600F"
        />
</shape>