<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:gravity="center">

    <!-- BUTTON LOGIN -->
    <Button
        android:id="@+id/main_activity_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="#fff"
        android:textSize="@dimen/default_text_size"
        android:background="@drawable/button_radius_primary_light_color"
        style="?android:attr/borderlessButtonStyle"
        android:layout_margin="@dimen/default_large_margin"
        android:padding="@dimen/default_large_margin"
        android:onClick="instantClick"/>

</LinearLayout>