<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/colorSandClearLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <!-- ENIGMA TEXT VIEW -->
        <TextView
            android:id="@+id/enigma_item_tv_enigma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="ENIGMA"
            android:textColor="@color/secondaryTextColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>
        <!-- CATEGORY LAYOUT  -->
        <RelativeLayout
            android:id="@+id/enigma_item_rl_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enigma_item_tv_enigma">
            <TextView
                android:id="@+id/enigma_item_tv_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="4dp"
                android:text="Catégorie : "
                android:textColor="@color/secondaryTextColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                android:id="@+id/enigma_item_tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/enigma_item_tv_category_title"
                android:layout_margin="4dp"
                android:text="Category"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/secondaryTextColor"
                android:textStyle="bold"/>
        </RelativeLayout>
        <!-- CATEGORY LAYOUT  -->
        <RelativeLayout
            android:id="@+id/enigma_item_rl_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enigma_item_rl_category">
            <TextView
                android:id="@+id/enigma_item_tv_difficulty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="4dp"
                android:text="Enigme résolue : "
                android:textColor="@color/secondaryTextColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                android:id="@+id/enigma_item_tv_difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/enigma_item_tv_difficulty_title"
                android:layout_margin="4dp"
                android:text="0 fois"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/secondaryTextColor"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>