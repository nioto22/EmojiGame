                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/solve_activity_category_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/secondaryTextColor"
                android:textStyle="bold" />

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/solve_enigma_activity_enigma_layout_tv_enigma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/solve_enigma_activity_enigma_layout_category"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:gravity="center"
                android:text="@string/download_text"
                android:textColor="@color/secondaryTextColor"
                android:textSize="35sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/solve_enigma_activity_enigma_layout_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
