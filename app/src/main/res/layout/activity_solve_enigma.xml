<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".activities.SolveEnigmaActivity">


    <!-- ENIGMA LAYOUT  -->
    <LinearLayout
        android:id="@+id/solve_enigma_activity_enigma_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="vertical"
        android:background="@drawable/background_enigma_item"
        android:layout_margin="3dp">
        <RelativeLayout
            android:id="@+id/solve_enigma_activity_enigma_layout_enigma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
        <TextView
            android:id="@+id/solve_enigma_activity_enigma_layout_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Catégorie"
            android:textColor="@color/secondaryTextColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/solve_enigma_activity_enigma_layout_tv_enigma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/solve_enigma_activity_enigma_layout_category"
            android:gravity="center"
            android:text="Chargement ..."
            android:textColor="@color/secondaryTextColor"
            android:textSize="35sp"
            android:textStyle="bold"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/solve_enigma_activity_enigma_layout_info_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/solve_enigma_activity_enigma_layout_user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Créé par : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/solve_enigma_activity_enigma_layout_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="Chargement ..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/secondaryTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/solve_enigma_activity_enigma_layout_difficulty_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enigme résolue : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/secondaryTextColor"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/solve_enigma_activity_enigma_layout_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="Chargement ..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/secondaryTextColor"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <!-- BUTTONS CHAT CONTAINER -->
    <LinearLayout
        android:id="@+id/solve_enigma_activity_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- BUTTON CHAT ANDROID -->
        <ImageButton
            android:id="@+id/solve_enigma_activity_enigma_button"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:src="@drawable/ic_question"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tag="10"/>

        <!-- BUTTON CHAT FIREBASE -->
        <ImageButton
            android:id="@+id/solve_enigma_activity_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@color/colorSandLight"
            android:src="@drawable/ic_chat"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tag="20"/>

        <!-- BUTTON CHAT BUG -->
        <ImageButton
            android:id="@+id/solve_enigma_activity_podium_button"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@color/colorSand"
            android:src="@drawable/ic_podium"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tag="30"/>
    </LinearLayout>

    <!-- LinearLayout ONGLETS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="horizontal">

        <!-- ONGLET RESOLVE -->
        <RelativeLayout
            android:id="@+id/solve_enigma_activity_onglet_layout_rl_resolve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@color/colorSandClearLight"
            android:gravity="center">
            <TextView
                android:id="@+id/solve_enigma_activity_onglet_resolve_response_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:text="Votre réponse :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/secondaryTextColor"/>
            <EditText
                android:id="@+id/solve_enigma_activity_onglet_resolve_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_response_background"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:padding="10dp"
                android:gravity="center"
                android:hint="Entrer votre réponse ici"
                android:layout_below="@id/solve_enigma_activity_onglet_resolve_response_title"
                />
            <Button
                android:id="@+id/solve_enigma_activity_onglet_resolve_send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/solve_enigma_activity_onglet_resolve_response"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:text="ENVOYER"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:background="@drawable/button_radius_green_color"/>



        </RelativeLayout>

    </LinearLayout>

</LinearLayout>