<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/by_player_button_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_radius_primary_color"
    android:layout_margin="@dimen/default_margin"
    android:gravity="center"
    android:padding="2dp">
    <TextView
        android:id="@+id/player_button_text_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/by_enigma_button_filter_title_text"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/default_text_medium"
        android:gravity="center"/>
    <TextView
        android:id="@+id/enigma_button_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_button_text_one"
        android:layout_alignParentStart="true"
        android:text="@string/by_enigma_button_detail_text"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/default_text_medium"
        android:gravity="center"/>

</RelativeLayout>