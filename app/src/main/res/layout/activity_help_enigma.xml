<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/help_enigma_activity_rl_global"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nioto.emojigame.activities.CreateEnigmaActivity"
    android:background="@color/fui_transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/popup_help_example_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold"
            android:padding="@dimen/default_margin"/>
        <Button
            android:id="@+id/help_enigma_popup_close"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="top|end"
            android:background="@drawable/close"
            android:layout_margin="@dimen/default_margin"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!-- ENIGMA LAYOUT  -->
    <RelativeLayout
        android:id="@+id/activity_help_enigma_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/primaryDarkColor">
        <TextView
            android:id="@+id/activity_help_enigma_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/popup_help_enigma_help"
            android:textColor="@color/primaryTextColor"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_help_enigma_text_view">
        <ImageView
            android:id="@+id/create_activity_et_enigma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/example"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/default_small_margin"
                android:text="@string/activity_help_text_explanation_enigma_two"
                android:textStyle="italic"
                android:textColor="@color/primaryTextColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
        </FrameLayout>
    </RelativeLayout>
    <!-- Text Inputs Layout  -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/fui_transparent">

    </android.support.design.widget.TextInputLayout>


</LinearLayout>