<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_enigma_activity_rl_global"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nioto.emojigame.activities.CreateEnigmaActivity"
    android:background="@color/primaryDarkColor">

    <RelativeLayout
        android:id="@+id/create_activity_toolbar_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">

        <ImageButton
            android:id="@+id/create_activity_toolbar_return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/default_margin"
            android:background="@color/fui_transparent"
            android:src="@drawable/ic_back_arrow"
            android:focusable="true"
            android:contentDescription="@string/back_button_content_description" />

        <TextView
            android:id="@+id/create_activity_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/create_activity_toolbar_return_button"
            android:layout_toStartOf="@+id/create_activity_toolbar_smileys_ll"
            android:layout_margin="@dimen/default_margin"
            android:paddingStart="@dimen/default_margin"
            android:paddingEnd="@dimen/default_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primaryTextColor"/>
        <LinearLayout
            android:id="@+id/create_activity_toolbar_coins_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_toolbar_image"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_margin="@dimen/default_margin">
            <TextView
                android:id="@+id/create_activity_toolbar_coins_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/default_small_margin_5dp"
                android:text="@string/main_activity_points_text"
                android:textColor="@color/primaryTextColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
            <ImageButton
                android:id="@+id/create_activity_toolbar_coins_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_coin"
                android:background="@color/fui_transparent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/default_small_margin_5dp"
                android:focusable="true"
                android:contentDescription="@string/emoji_coin_content_description" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/create_activity_toolbar_smileys_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toStartOf="@+id/create_activity_toolbar_coins_ll"
            android:background="@drawable/background_toolbar_image"
            android:layout_margin="@dimen/default_margin">
            <TextView
                android:id="@+id/create_activity_toolbar_smileys_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/default_small_margin_5dp"
                android:text="@string/main_activity_points_text"
                android:textColor="@color/primaryTextColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
            <ImageButton
                android:id="@+id/create_activity_toolbar_smileys_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_smiley"
                android:background="@color/fui_transparent"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/default_small_margin_5dp"
                android:paddingEnd="@dimen/default_small_margin_5dp"
                android:focusable="true"
                android:contentDescription="@string/smiley_image_button_content_description" />
        </LinearLayout>

    </RelativeLayout>

    <!-- ENIGMA LAYOUT  -->
    <FrameLayout
        android:id="@+id/create_activity_enigma_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/create_activity_et_enigma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/enigma_hint"
            android:textColorHint="@color/primaryTextColor"
            android:inputType="textShortMessage|textCapSentences|textMultiLine"
            android:maxLines="3"
            android:imeOptions="actionSend|flagNoEnterAction"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:autoSizeTextType="uniform"/>
        <ImageButton
            android:id="@+id/create_activity_enigma_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_help_24dp"
            android:background="@color/primaryDarkColor"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:contentDescription="@string/question_mark_image_content_description" />

    </FrameLayout>
    <!-- Text Inputs Layout  -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <!-- SOLUTION LAYOUT  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/create_activity_tv_title_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/create_activity_solution_title_text"
                android:textColor="@color/primaryTextColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/create_activity_et_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/create_activity_tv_title_solution"
                android:layout_toStartOf="@+id/create_activity_solution_help"
                android:hint="@string/create_activity_solution_hint"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/primaryTextColor"
                android:textColor="@color/primaryTextColor"/>
            <ImageButton
                android:id="@+id/create_activity_solution_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_help_24dp"
                android:background="@color/primaryDarkColor"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/question_mark_image_content_description" />
        </RelativeLayout>
        <!-- CATEGORY LAYOUT  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/create_activity_tv_title_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_alignParentStart="true"
                android:text="@string/create_activity_category_title_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryTextColor"
                />
            <FrameLayout
                android:id="@+id/create_activity_frame_category_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/create_activity_tv_title_category">
                <TextView
                    android:id="@+id/create_activity_tv_category_choosed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:text="@string/tv_category_choosed"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/primaryTextColor"
                    />
                <ExpandableListView
                    android:id="@+id/create_activity_list_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:divider="@color/browser_actions_bg_grey"
                    android:dividerHeight="0.5dp"
                    android:childDivider="@color/primaryTextColor" />

            </FrameLayout>
        </RelativeLayout>
        <!-- OTHER LAYOUT  -->
        <RelativeLayout
            android:id="@+id/create_activity_rl_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/create_activity_tv_title_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/create_activity_other_title_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryTextColor"
                />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/create_activity_et_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/create_activity_tv_title_other"
                android:hint ="@string/create_activity_other_detail_hint"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/primaryTextColor"
                android:textColor="@color/primaryTextColor"/>
        </RelativeLayout>
        <!-- MESSAGE LAYOUT  -->
        <RelativeLayout
            android:id="@+id/create_activity_rl_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/create_activity_tv_title_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/create_activity_explanation_title_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryTextColor"
                />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/create_activity_et_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/create_activity_tv_title_message"
                android:hint ="@string/create_activity_explanation_hint"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/primaryTextColor"
                android:textColor="@color/primaryTextColor"/>
        </RelativeLayout>
        <!-- BUTTON LAYOUT  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/create_activity_create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_main_edit"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                android:text="@string/create_button"
                android:textColor="@color/primaryTextColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            <Button
                android:id="@+id/create_activity_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/button_main_edit"
                android:layout_margin="@dimen/default_margin"
                android:layout_centerInParent="true"
                android:text="@string/create_activity_update_button"
                android:textColor="@color/primaryTextColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            <ProgressBar
                android:id="@+id/create_activity_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/create_activity_create_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </android.support.design.widget.TextInputLayout>


</LinearLayout>