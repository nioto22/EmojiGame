<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nioto.emojigame.activities.PlayActivity"
    android:background="@color/primaryLightColor">
    <RelativeLayout
        android:id="@+id/activity_play_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primaryColor"
        android:layout_alignParentStart="true"
        android:padding="8dp">
        <RelativeLayout
            android:id="@+id/activity_play_filter_player_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/activity_play_filter_button_category"
            android:visibility="gone">

            <EditText
                android:id="@+id/activity_play_filter_player_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_radius_primary_color"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/activity_play_filter_player_close_button"
                android:visibility="gone"
                android:layout_gravity="start"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:inputType="text"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="chercher joueur"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/thirdTextColor"
                android:textColor="@color/primaryTextColor"/>
            <ImageButton
                android:id="@+id/activity_play_filter_player_close_button"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/default_margin"
                android:src="@drawable/close"
                android:background="@color/primaryColor"
                android:layout_marginEnd="@dimen/default_margin"/>
        </RelativeLayout>
        <include
            android:id="@+id/activity_play_filter_button_player"
            layout="@layout/by_player_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_alignParentStart="true"
            android:visibility="visible"/>
        <include
            android:id="@+id/activity_play_filter_button_category"
            layout="@layout/by_category_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <include
            android:id="@+id/activity_play_filter_button_enigma"
            layout="@layout/by_enigma_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>
    <!-- RECYCLER VIEW CONTAINER -->
    <LinearLayout
        android:id="@+id/activity_play_enigma_recycler_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/activity_play_filter_layout">

        <!-- MESSAGE RECYCLER VIEW EMPTY -->
        <TextView
            android:id="@+id/activity_play_enigma_text_view_recycler_view_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_enigma_filter"
            android:textColor="@color/primaryTextColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:layout_margin="@dimen/default_large_margin"
            android:visibility="gone"/>

        <!-- RECYCLER VIEW -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_play_enigma_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>