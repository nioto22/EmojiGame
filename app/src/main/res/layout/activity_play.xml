<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nioto.emojigame.activities.PlayActivity"
    android:background="@color/primaryDarkColor">

    <!-- TAGS CONTAINER -->
    <LinearLayout
        android:id="@+id/solve_enigma_activity_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <!-- BUTTON RESOLVE ANDROID -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/solve_enigma_activity_enigma_button"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:contentDescription="@string/resolve_button_image_content_description"
                android:background="@color/colorGreen"
                android:src="@drawable/ic_question"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:tag="10"/>
            <ImageView
                android:id="@+id/solve_enigma_activity_bottom_stroke_solve_tab"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorError"
                android:visibility="visible"/>
        </LinearLayout>
        <!-- BUTTON CHAT FIREBASE -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/solve_enigma_activity_hint_button"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:contentDescription="@string/hint_button_image_content_description"
                android:background="@color/colorAccent"
                android:src="@drawable/ic_history"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:tag="20"/>
            <ImageView
                android:id="@+id/solve_enigma_activity_bottom_stroke_hint_tab"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorError"
                android:visibility="invisible"/>
        </LinearLayout>
        <!-- BUTTON PODIUM -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/solve_enigma_activity_podium_button"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:contentDescription="@string/podium_button_image_content_description"
                android:background="@color/colorSand"
                android:src="@drawable/ic_perso"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:tag="30"/>
            <ImageView
                android:id="@+id/solve_enigma_activity_bottom_stroke_podium_tab"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorError"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

    <!-- FILTER CONTAINER -->
    <RelativeLayout
        android:id="@+id/activity_play_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/solve_enigma_activity_buttons_container"
        android:background="@color/primaryDarkColor"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
        <RelativeLayout
            android:id="@+id/activity_play_filter_player_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_extra_large_margin"
            android:visibility="gone">

            <EditText
                android:id="@+id/activity_play_filter_player_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_radius_primary_color"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/activity_play_filter_player_close_button"
                android:visibility="gone"
                android:layout_gravity="start"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:inputType="text"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/play_activity_search_player_input_hint"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/thirdTextColor"
                android:textColor="@color/primaryTextColor"/>
            <ImageButton
                android:id="@+id/activity_play_filter_player_close_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/close_button_image_content_description"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/default_margin"
                android:src="@drawable/close"
                android:background="@color/primaryColor"
                android:layout_marginEnd="@dimen/default_large_margin"/>
        </RelativeLayout>

        <include
            android:id="@+id/activity_play_filter_button_player"
            layout="@layout/by_player_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_extra_large_margin"
            android:visibility="visible"/>
        <include
            android:id="@+id/activity_play_filter_button_category"
            layout="@layout/by_category_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_extra_large_margin"/>
<!--
        <include
            android:id="@+id/activity_play_filter_button_enigma"
            layout="@layout/by_enigma_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"/>
-->
     </LinearLayout>
    </RelativeLayout>
    <!-- RECYCLER VIEW CONTAINER -->
    <LinearLayout
        android:id="@+id/activity_play_enigma_recycler_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/activity_play_filter_layout">

        <!-- MESSAGE RECYCLER VIEW EMPTY -->
        <TextView
            android:id="@+id/activity_play_enigma_text_view_recycler_view_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_enigma_filter"
            android:textColor="@color/primaryTextColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:layout_margin="@dimen/default_large_margin"
            android:visibility="gone"/>

        <!-- RECYCLER VIEW -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_play_enigma_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>